# ClawCamera Environment Configuration
# Copy this file to .env and fill in your values
# .env is .gitignored and never committed to the repo

# ===== REQUIRED =====

# Groq API Key (for Vision analysis)
# Get free key at https://console.groq.com
GROQ_API_KEY=gsk_xxxxxxxxxxxxx

# ===== OPTIONAL: Camera Configuration =====

# USB Webcam device (Linux/macOS)
# Find with: ls /dev/video*
# macOS: /dev/video0 or check system_profiler SPUSBDataType
CAMERA_SOURCE=/dev/video0

# Wyze camera IP (for RTSP streaming)
# Find on network with: nmap -p 554 192.168.1.0/24
WYZE_IP=192.168.1.100
WYZE_RTSP_PORT=554

# ===== OPTIONAL: Motion Detection =====

# Seconds between motion alerts (cooldown)
# Prevents spam if something is continuously moving
MOTION_COOLDOWN=180

# Motion detection check interval (milliseconds)
# How often to check for changes between frames
MOTION_INTERVAL=2000

# Motion threshold (percentage difference)
# Lower = more sensitive, higher = less sensitive
MOTION_THRESHOLD=10

# ===== OPTIONAL: Overwatch Monitoring =====

# Random check-in interval (milliseconds)
# How often Overwatch sends status updates
CHECK_IN_INTERVAL=900000  # 15 minutes

# Image quality for captures (0-100)
# Lower = smaller files, faster transfer
CAPTURE_QUALITY=80

# Retention days (how long to keep images)
RETENTION_DAYS=7

# ===== OPTIONAL: Telegram Integration =====

# Get token from BotFather (@BotFather on Telegram)
TELEGRAM_TOKEN=your_bot_token_here

# Get chat ID by:
# 1. Send message to bot
# 2. curl https://api.telegram.org/botTOKEN/getUpdates
TELEGRAM_CHAT_ID=your_chat_id_here

# ===== OPTIONAL: Tenor GIF Integration =====

# Tenor API Key (optional, free demo key used if not set)
# Get at https://tenor.com/developer/dashboard
TENOR_API_KEY=your_tenor_key_here

# ===== OPTIONAL: ESP32-CAM Configuration =====

# ESP32-CAM IP address (for wireless monitoring)
ESP32_IP=192.168.1.50
ESP32_RTSP_PORT=554

# Media receiver port (where ESP32 sends images)
MEDIA_RECEIVER_PORT=5555

# ===== OPTIONAL: Developer Settings =====

# Debug mode (verbose logging)
DEBUG=office-cam:*

# Node environment
NODE_ENV=production

# Log level (error|warn|info|debug)
LOG_LEVEL=info
